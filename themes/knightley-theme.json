{
    "$schema": "vscode://schemas/color-theme",
    "name": "Knightley Theme",
    "type": "dark",
    "colors": {
        // Customizations on top of the inherited theme
        "commandCenter.foreground": "#FFFFFF",
        "actionBar.toggledBackground": "#525761",
        "activityBar.background": "#282c34",
        "activityBar.foreground": "#FFFFFF",
        "activityBarBadge.background": "#4d78cc",
        "activityBarBadge.foreground": "#FFFFFF",
        "activityBar.activeBorder": "#FFFFFF",
        "badge.background": "#282c34",
        "button.background": "#404754",
        "button.secondaryBackground": "#30333d",
        "button.secondaryForeground": "#c0bdbd",
        "checkbox.border": "#404754",
        "debugToolBar.background": "#21252b",
        "descriptionForeground": "#abb2bf",
        "diffEditor.insertedTextBackground": "#00809b33",
        "dropdown.background": "#2b2121",
        "dropdown.border": "#21252b",
        "editor.background": "#282c34",
        "editor.findMatchBackground": "#d19a6644",
        "editor.findMatchBorder": "#ffffff5a",
        "editor.findMatchHighlightBackground": "#ffffff22",
        "editor.foreground": "#abb2bf",
        "editorBracketHighlight.foreground1": "#d19a66",
        "editorBracketHighlight.foreground2": "#c678dd",
        "editorBracketHighlight.foreground3": "#56b6c2",
        "editorHoverWidget.highlightForeground": "#61afef",
        "editorInlayHint.foreground": "#abb2bf",
        "editorInlayHint.background": "#2c313c",
        "editor.lineHighlightBackground": "#2c313c",
        "editorLineNumber.activeForeground": "#abb2bf",
        "editor.selectionBackground": "#67769660",
        "editor.selectionHighlightBackground": "#ffd33d44",
        "editor.selectionHighlightBorder": "#dddddd",
        "editor.wordHighlightBackground": "#d2e0ff2f",
        "editor.wordHighlightBorder": "#7f848e",
        "editor.wordHighlightStrongBackground": "#abb2bf26",
        "editor.wordHighlightStrongBorder": "#7f848e",
        "editorBracketMatch.background": "#515a6b",
        "editorBracketMatch.border": "#515a6b",
        "editorError.foreground": "#c24038",
        "editorGroup.background": "#181a1f",
        "editorGroup.border": "#181a1f",
        "editorGroupHeader.tabsBackground": "#21252b",
        "editorHoverWidget.background": "#21252b",
        "editorHoverWidget.border": "#181a1f",
        "editorIndentGuide.activeBackground1": "#c8c8c859",
        "editorIndentGuide.background1": "#3b4048",
        "editorLineNumber.foreground": "#495162",
        "editorMarkerNavigation.background": "#21252b",
        "editorRuler.foreground": "#abb2bf26",
        "editorSuggestWidget.background": "#21252b",
        "editorSuggestWidget.border": "#181a1f",
        "editorSuggestWidget.selectedBackground": "#2c313a",
        "editorWarning.foreground": "#d19a66",
        "editorWhitespace.foreground": "#ffffff1d",
        "editorWidget.background": "#21252b",
        "focusBorder": "#3e4452",
        "gitDecoration.ignoredResourceForeground": "#636b78",
        "input.background": "#1d1f23",
        "input.foreground": "#abb2bf",
        "list.activeSelectionBackground": "#2c313a",
        "list.activeSelectionForeground": "#d7dae0",
        "list.focusBackground": "#323842",
        "list.focusForeground": "#f0f0f0",
        "list.highlightForeground": "#ecebeb",
        "list.hoverBackground": "#2c313a",
        "list.hoverForeground": "#abb2bf",
        "list.inactiveSelectionBackground": "#323842",
        "list.inactiveSelectionForeground": "#d7dae0",
        "list.warningForeground": "#d19a66",
        "menu.foreground": "#abb2bf",
        "menu.separatorBackground": "#343a45",
        "panel.border": "#3e4452",
        "panelSectionHeader.background": "#21252b",
        "peekViewEditor.background": "#1b1d23",
        "peekViewEditor.matchHighlightBackground": "#29244b",
        "peekViewResult.background": "#22262b",
        "scrollbar.shadow": "#23252c",
        "scrollbarSlider.activeBackground": "#747d9180",
        "scrollbarSlider.background": "#4e566660",
        "scrollbarSlider.hoverBackground": "#5a637580",
        "settings.focusedRowBackground": "#282c34",
        "settings.headerForeground": "#FFFFFF",
        "sideBar.background": "#21252b",
        "sideBar.foreground": "#abb2bf",
        "sideBarSectionHeader.background": "#282c34",
        "sideBarSectionHeader.foreground": "#abb2bf",
        "tab.activeBackground": "#282c34",
        "tab.activeBorder": "#282c34",
        "tab.activeForeground": "#FFFFFF",
        "tab.activeBorderTop": "#282c34",
        "tab.border": "#181a1f",
        "tab.hoverBackground": "#282c34",
        "tab.inactiveBackground": "#21252b",
        "tab.unfocusedHoverBackground": "#323842",
        "terminal.background": "#282c34",
        "terminal.border": "#3e4452",
        "terminal.foreground": "#abb2bf",
        "terminal.selectionBackground": "#67769660",
        "terminal.tab.activeBorder": "#282c34",
        "textBlockQuote.background": "#2e3440",
        "textBlockQuote.border": "#4b5362",
        "textLink.foreground": "#61afef",
        "textPreformat.foreground": "#d19a66",
        "titleBar.activeBackground": "#282c34",
        "titleBar.activeForeground": "#9da5b4",
        "titleBar.inactiveBackground": "#282c34",
        "titleBar.inactiveForeground": "#6b717d",
        "tree.indentGuidesStroke": "#ffffff1d",
        "walkThrough.embeddedEditorBackground": "#2e3440",
        "editor.inactiveSelectionBackground": "#3A3D41",
        "list.dropBackground": "#383B3D",
        "sideBarTitle.foreground": "#BBBBBB",
        "input.placeholderForeground": "#A6A6A6",
        "menu.background": "#252526",
        "menu.border": "#454545",
        "menu.selectionBackground": "#0078d4",
        "statusBarItem.remoteForeground": "#FFF",
        "statusBarItem.remoteBackground": "#16825D",
        "ports.iconRunningProcessForeground": "#369432",
        "sideBarSectionHeader.border": "#ccc3",
        "tab.selectedBackground": "#222222",
        "tab.selectedForeground": "#ffffffa0",
        "tab.lastPinnedBorder": "#ccc3",
        "list.activeSelectionIconForeground": "#FFF",
        "terminal.inactiveSelectionBackground": "#3A3D41",
        "widget.border": "#303031"
    },
    "tokenColors": [
        // Base text color
        {"settings": {"foreground": "#cccac2"}},
        
        // Comments
        {"scope": [
            "comment",
            "string.quoted.docstring",
            "punctuation.definition.markdown",
            "text.html.markdown meta.dummy.line-break"
        ], "settings": {"foreground": "#b8cfe680", "fontStyle": "italic"}},
        
        // Constants and numbers
        {"scope": [
            "constant.numeric",
            "constant.language",
            "variable.parameter",
            "meta.parameter",
            "keyword.operator.exponent"
        ], "settings": {"foreground": "#dfbfff"}},
        
        // Strings and related
        {"scope": [
            "string",
            "entity.name.import",
            "entity.name.package"
        ], "settings": {"foreground": "#ffd173"}},
        
        // Types, classes, interfaces
        {"scope": [
            "entity.name.type",
            "entity.name.class",
            "entity.name.namespace",
            "support.type",
            "storage.type.cs",
            "storage.type.java",
            "storage.type.groovy",
            "storage.type.go"
        ], "settings": {"foreground": "#4ec9b0"}},
        
        // Functions and methods
        {"scope": [
            "entity.name.function",
            "meta.function-call",
            "support.function",
            "variable.function",
            "variable.annotation",
            "entity.other.attribute-name"
        ], "settings": {"foreground": "#d5ff80"}},
        
        // Variables
        {"scope": [
            "variable",
            "entity.name.variable",
            "entity.name.tag",
            "entity.other.inherited-class",
            "support.class",
            "support.variable",
            "support.type.property-name",
            "meta.definition.variable",
            "constant.character",
            "constant.other"
        ], "settings": {"foreground": "#5ccfe6"}},
        
        // Keywords, storage
        {"scope": [
            "keyword",
            "storage",
            "punctuation.definition.template-expression",
            "meta.decorator"
        ], "settings": {"foreground": "#ffad66"}},
        
        // Control flow keywords
        {"scope": [
            "keyword.control",
            "keyword.operator.new",
            "keyword.operator.delete",
            "entity.name.operator"
        ], "settings": {"foreground": "#c586c0"}},
        
        // Operators
        {"scope": [
            "keyword.operator",
            "punctuation.accessor"
        ], "settings": {"foreground": "#f29e74"}},
        
        // Storage types/modifiers
        {"scope": [
            "storage.type",
            "storage.modifier",
            "meta.preprocessor",
            "meta.diff.header"
        ], "settings": {"foreground": "#569cd6"}},
        
        // Support functions & variables
        {"scope": [
            "support.function",
            "support.macro",
            "variable.member",
            "markup.italic"
        ], "settings": {"foreground": "#f28779"}},
        
        // Constants
        {"scope": [
            "support.constant"
        ], "settings": {"foreground": "#f29e74", "fontStyle": "italic"}},
        
        // CSS/HTML related
        {"scope": [
            "entity.other.attribute-name.css",
            "entity.name.tag.css",
            "constant.character.escape",
            "constant.other.color",
            "meta.embedded",
            "support.constant.color",
            "support.constant.font-name",
            "support.constant.media",
            "markup.inline.raw",
            "punctuation.definition.regexp"
        ], "settings": {"foreground": "#ce9178"}},
        
        // Markup headings
        {"scope": "markup.heading", "settings": {"foreground": "#ffd173", "fontStyle": "bold"}},
        
        // Markup elements with specific styling
        {"scope": "markup.quote", "settings": {"foreground": "#95e6cb", "fontStyle": "italic"}},
        {"scope": "markup.bold", "settings": {"foreground": "#569cd6", "fontStyle": "bold"}},
        {"scope": "markup.inserted", "settings": {"foreground": "#87d96c"}},
        {"scope": "markup.deleted", "settings": {"foreground": "#ce9178"}},
        {"scope": "markup.changed", "settings": {"foreground": "#80bfff"}},
        {"scope": "markup.underline.link", "settings": {"foreground": "#5ccfe6"}},
        
        // Invalid
        {"scope": ["invalid", "message.error"], "settings": {"foreground": "#ff6666"}},
        
        // Special cases that don't fit elsewhere
        {"scope": "variable.other.constant", "settings": {"foreground": "#4fc1ff"}},
        {"scope": "variable.other.enummember", "settings": {"foreground": "#4fc1ff"}},
        {"scope": "constant.regexp", "settings": {"foreground": "#d16969"}}
    ],
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "newOperator": "#C586C0",
        "stringLiteral": "#ce9178",
        "customLiteral": "#DCDCAA",
        "numberLiteral": "#b5cea8"
    }
}
